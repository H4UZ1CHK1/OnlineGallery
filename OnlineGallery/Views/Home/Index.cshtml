@{
    ViewData["Title"] = "Онлайн Галерея";
}

<div class="container text-center mt-5">
    <h1 class="display-4">🎨 Добро пожаловать в Онлайн Галерею!</h1>
    <p class="lead">Исследуйте коллекцию цифрового искусства, созданного талантливыми авторами.</p>

    <hr class="my-4" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <img src="/uploads/ChatGPT Image 12 июн. 2025 г., 11_19_03.png" class="img-fluid rounded shadow" alt="Пример изображения">
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-primary btn-lg me-2" asp-controller="Images" asp-action="Index">🖼 Перейти к галерее</a>

        @if (!User.Identity.IsAuthenticated)
        {
            <a class="btn btn-outline-secondary btn-lg" asp-controller="Account" asp-action="Login">🔐 Войти в профиль</a>
        }
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success mt-4">
            @TempData["Message"]
        </div>
    }
</div>

<style>
    .container {
        animation: fadeIn 1s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
