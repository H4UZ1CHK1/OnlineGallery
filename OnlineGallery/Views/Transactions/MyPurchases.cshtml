@model IEnumerable<OnlineGallery.Models.Image>

@{
    ViewData["Title"] = "Мои покупки";
}

<h2 class="mb-4">🖼 Мои купленные изображения</h2>

@if (!Model.Any())
{
    <p>Вы еще ничего не купили.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var image in Model)
        {
            <div class="col">
                <div class="card h-100 shadow">
                    <img src="@image.FilePath" class="card-img-top" alt="@image.Title">
                    <div class="card-body">
                        <h5 class="card-title">@image.Title</h5>
                        <p class="card-text">@image.Description</p>
                        <p class="card-text"><small class="text-muted">Автор: @image.User?.FirstName @image.User?.LastName</small></p>
                        <p class="card-text"><small class="text-muted">Категория: @image.Category?.CategoryName</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
