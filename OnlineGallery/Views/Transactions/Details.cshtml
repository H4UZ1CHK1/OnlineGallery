@model OnlineGallery.Models.Transactions

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Пользователь")
        </dt>
        <dd class="col-sm-10">
            @(Model.User != null ? Model.User.UserId.ToString() : "—")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Изображение")
        </dt>
        <dd class="col-sm-10">
            @(Model.Image != null ? Model.Image.ImageId.ToString() : "—")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TransactionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
